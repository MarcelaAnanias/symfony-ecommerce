{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    <div class="container  security-form">

        <div class="logo">
            <a href="/">
                <img src="/images/logo.svg" alt="Logo">
            </a>
        </div>

        <form method="post" class="login-form">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="logout mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h1 class="h4 mb-4 font-weight-normal">Please sign in</h1>
            <label class="mb-3" for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            <label class="mb-3" for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

            <br>
            <button class="btn btn-lg btn-primary btn-login" type="submit">
                Login
            </button>
            <a href="/register" class="btn btn-lg btn-primary btn-register mt-3"> Sign Up </a>
        </form>
    </div>
{% endblock %}
