{% extends 'base.html.twig' %}

{% block title %} Product {% endblock %}

{% block body %}

<div class="container">

    <br><h2>Product</h2><br><br>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th> Subcategory </th>
                <td>
                    {% for subCategory in product.subCategories %}
                        {{ subCategory.name }}
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <div class=" btn-show ">
    
        <a href="{{ path('app_product_index') }}" class="btn btn-light mt-3 mb-3" style=" width: 150px;"> Back to List</a>

        <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-outline-dark mb-3" style=" width: 150px"> Edit </a>
        
        {{ include('product/_delete_form.html.twig') }}
    
    </div>
</div>
{% endblock %}
