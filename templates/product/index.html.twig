{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}

<div class="container">

    {% include "layout/_flash_message_html.twig" %}

    <br><h2>Product</h2><br><br>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.description }}</td>
                <td>{{ '$' ~ product.price|number_format(2, '.') }}</td>
                <td>
                    <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-light w-25"> Show </a>
                    <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-primary btn-block w-25"> Edit </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5"> No records found </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_product_new') }}" class="btn btn-outline-dark mt-5 btn-lg" >Create new</a>

</div>

{% endblock %}