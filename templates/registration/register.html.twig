{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container register-form">

        <div class="logo">
            <a href="/">
                <img src="/images/logo.svg" alt="Logo">
            </a>
        </div> 

        <div class="login-form" style=" margin-top: -20px;">
            <h1 class="h4 mb-4"> Register</h1>

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.email, {'attr':{'class': 'form form-control', 'placeholder':"example123@gmail.com"}}) }}
                {{ form_row(registrationForm.firstName, {'attr':{'class': 'form form-control'}}) }}
                {{ form_row(registrationForm.lastName, {'attr':{'class': 'form form-control'}}) }}
                {{ form_row(registrationForm.plainPassword, {'attr':{'class': 'form form-control'}}, {
                    label: 'Password'
                }) }}
                {{ form_row(registrationForm.agreeTerms, {'attr':{'class': 'terms mx-2'}}) }}

                <button class="btn btn-lg btn-primary btn-register mt-3" type="submit" class="btn">Register</button>
                <a href="/login" class="btn btn-lg btn-primary btn-login mt-3"> Login </a>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
